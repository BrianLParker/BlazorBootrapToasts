<div class="toast show mb-1 fade-in-03" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        @Toast.Icon
        <strong class="ms-2 me-auto">@Toast.Heading</strong>
        <small class="text-muted">@statusMessage</small>
        <button type="button" class="ml-2 mb-1 btn-close" @onclick=@RemoveMe aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        @Toast.Content
    </div>
</div>
