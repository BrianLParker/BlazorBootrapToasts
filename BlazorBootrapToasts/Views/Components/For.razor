@typeparam TItem
<If Condition="@Virtualize">
    <IfTrue>
        <Virtualize Items=@Items>
            @ChildContent(@context)
        </Virtualize>
    </IfTrue>
    <IfFalse>
        @foreach (var item in Items ?? Array.Empty<TItem>())
        {
            @ChildContent(@item)
        }
    </IfFalse>
</If>
